<h1>New User</h1>
<p>Already have an account?<%= link_to "here", root_path%></p>
<%= link_to user_omniauth_authorize_path(:facebook) do%>
  <div class="btn-lg btn-block btn-social btn-facebook">
          <i class="fa fa-facebook"></i> Sign in with Facebook
  </div>
<% end %>
<br>
<%= link_to user_omniauth_authorize_path(:twitter) do%>
  <div class="btn-lg btn-block btn-social btn-twitter">
          <i class="fa fa-twitter"></i> Sign in with Twitter
  </div>
<% end %>
<br>
<p>-------------------- or --------------------</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="field">
      <input autofocus="autofocus" type="name" value="" name="user[name]" id="user_name" placeholder="Name" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <input autofocus="autofocus" type="email" value="" name="user[email]" id="user_email" placeholder="Email" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <input autocomplete="off" type="position" name="user[position]" id="user_position" placeholder="Your Company/University" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <input autocomplete="off" type="password" name="user[password]" id="user_password" placeholder="Password" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="actions">
      <button type="submit" name="commit" class="btn btn-default btn-primary">Post</button>
    </div>
  </div>
<% end %>