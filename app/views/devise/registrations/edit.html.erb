<div class="container">
  <div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-8" style="background-color:white;margin-top:15px;">
      <h2>Edit Profile <%= resource_name.to_s.humanize %></h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :profile_photo %>
          </div>
          <div class="col-md-8" style="margin-bottom:10px;">
            <div style="float:left;">
              <%= image_tag(current_user.profile_photo.url(:square),style:"height:80px;")%>
            </div>
            <%= f.file_field :profile_photo, style:"width: 80px; overflow:hidden;", autofocus: true %>
            <br/>
          </div>
        </div>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :name %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class:"form-control", autofocus: true %><br/>
          </div>
        </div>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :email %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :email, class:"form-control", autofocus: true %><br/>
          </div>
        </div>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :company %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :company, class:"form-control", autofocus: true %><br/>
          </div>
        </div>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :position %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :position, class:"form-control", autofocus: true %><br/>
          </div>
        </div>
        <div class="field">
          <div class="col-md-4">
            <%= f.label :introduction %>
          </div>
          <div class="col-md-8">
            <%= f.text_area :introduction, class:"form-control", autofocus: true, cols: 40, rows: 6 %><br/>
          </div>
        </div>
      <div class="form-group">
        <div class="actions" style="text-align:center">
          <button type="submit" name="commit" class="btn btn-default btn-primary">Update</button>
        </div>
      </div>
    <% end %>
  <!-- <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %> -->

  </div>
  <div class="col-md-2"></div>
</div>
</div>