<div class="row" style="padding-top:5px;" >
  <% @article_feed.map do |a| %>
    <div class="col-md-12">
      <div  style="height:30px;">
        <div style="max-height:30px;float:left;"><%= link_to image_tag(a.user.profile_photo.url(:square),style:"height:30px;"), a.user %></div>
        <div style="font-size:12px;max-height:16px;box-sizing:border-box;font-weight:700;text-align:center;"><%= a.user.name %></div>
        <div style="font-size:10px;max-height:10px;margin-top:-2px;text-align:center;"><%= time_ago_in_words a.created_at %></div>
      </div>
    </div>
    <div class="col-md-12">
      <p style="border-bottom:1px solid #ccc;">
        <%=link_to "#{a.title}", a %>
      </p>
    </div>
  <% end %>
</div>