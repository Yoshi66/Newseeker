<div class="row" style="height:500px;padding-top:5px;overflow:auto;postition:fixed;" >
  <% @article_feed.map do |news| %>
    <div class="col-md-12">
      <%= link_to user_path(news.user.id,key:"current_user") do %>
        <div  style="height:30px;">
          <div style="max-height:30px;float:left;margin-left:5px;margin-right:5px;"><%= image_tag(news.user.profile_photo.url(:square),style:"height:30px;") %></div>
          <div style="max-height:16px;box-sizing:border-box;font-weight:700;"><%= news.user.name %></div>
          <div style="font-weight:3000;max-height:10px;margin-top:-2px;"><%= time_ago_in_words news.created_at %></div>
        </div>
      <% end %>
    </div>
    <% if news.comments.present? %>
      <div class="comment col-md-12"style="font-size:18px;">
        <%= news.comments.first.comment %>
      </div>
    <% end %>
      <div class="news-title col-md-12">
        <p style="border-bottom:1px solid #ccc;">
          <%=link_to "#{news.title}", news %>
        </p>
      </div>
  <% end %>
</div>