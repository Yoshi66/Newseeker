<%= link_to object do %>
    <div class="box btn-photo">
      <div class="photo photo-wrap">
        <%=link_to image_tag(object.photo.url(:medium),class:"img-responsive",style:"width:100%;height:100%"), object%>
      </div>
      <div class="title" style="padding:auto 10px auto 10px;height: 17%;">
        <h4><%=link_to object.title, object%></h4>
      </div>
      <div class="comment_person"style="height:15%;padding-left: 5px;padding-right: 5px;">
        <% if object.comments.present?%>
          <div style="padding-top:2px;float:left;">
            <%= image_tag(object.comments.first.user.profile_photo.url(:square),style:"width:35px;") %>
          </div>
          <div>
            <%= object.comments.first.user.name %>
          </div>
          <span>
            <%= object.comments.first.user.company %>
          </span>
        <% end %>
      </div>
      <div class="comment"style="height:10%;padding-left:5px;padding-right: 5px;">
         <% if object.comments.present?%>
            <%= object.comments.first.comment %>
        <% end %>
      </div>
      <div class="list-comment-person"style="height:10%;padding-left:5px;padding-right: 5px;padding-top: 2px;">
         <% if object.comments.present?%>
            <% object.comments.limit(10).last(9).map do |comment| %>
            <%= image_tag(comment.user.profile_photo.url(:square),style:"width:25px;") %>
            <% end %>
        <% end %>
      </div>
    </div>
<% end %>