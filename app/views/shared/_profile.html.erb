<div class="profile-frame" style="height:192px;border-bottom:1px solid #ccc;padding-top:24px;">
  <div class="introduction" style="height:118px;border-bottom:1px solid #ccc;text-align:center;">
    <% if user_signed_in? %>
      <%= link_to user_path(current_user,key:"current_user") do %>
        <div class="profile_photo">
          <%= image_tag(current_user.profile_photo.url(:square),class:"round-picture",style:"display:block;margin:5px auto 5px auto;margin-top:10px;width:48px;height:48px;")%>
        </div>
        <div class="name position" style="height:45px;margin-top:10px;">
          <div style="text-align:center;"><%= current_user.name%></div>
          <div style="text-align:center;"><%= current_user.position%></div>
        </div>
      <% end %>
    <% else %>
      <i class="fa fa-user fa-2x" style="padding-top:10px;"></i>
        <div class="name position" style="height:45px;margin-top:10px;">
          <div style="text-align:center;">No Account</div>
          <div style="text-align:center;margin-top:10px;">
            <%= button_to "Sign Up", new_user_registration_path, method: "get", remote: true, 'data-toggle' => "modal",'data-target'=> '#sign_up_modal', class:"btn btn-success"%>
          </div>
        </div>
    <% end %>
  </div>
  <div class="relation" style="height:43px;">
    <% if user_signed_in? %>
      <%= link_to user_path(current_user, key:"followed_users") do %>
        <div class="following col-md-6" style="text-align:center;">
            <div class="center-block" >
                <div style="font-weight:700;"><%= current_user.followed_users.count :style => 'color: #3366FF;'%></div>
            </div>
            <div>following</div>
        </div>
      <% end %>
      <%= link_to user_path(current_user, key:"followers") do %>
        <div class="followed col-md-6" style="float:right;border-left:1px solid #ccc;text-align:center;">
            <div class="center-block">
              <div id="followers" style="font-weight:700;"><%= current_user.followers.count %></div>
            </div>
            <div>followed</div>
        </div>
      <% end %>
    <% else %>
      <div class="following col-md-6">
        <div class="center-block" style="width:50%;text-align:center;">
          <div>-</div>
        </div>
        <div style="padding-left:2px;">following</div>
      </div>
      <div class="following col-md-6">
        <div class="center-block" style="text-align:center;">
          <div>-</div>
        </div>
        <div style="padding-left:3px;">followed</div>
      </div>
    <% end %>
  </div>
</div>